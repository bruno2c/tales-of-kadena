{% extends "base.html.twig" %}

{% block stylesheets %}

        <link href="{{ asset('css/ui.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/woods.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/monsters.css') }}" rel="stylesheet" />

{% endblock %}

{% block body %}

        <div id="game" class="stage">
                <div>
                        {% for enemy in enemies %}
                                <div class="enemy-slot{{ loop.index	 }}">
                                        <div class="health-bar">
                                                <div class="current">&nbsp;</div>
                                                <div class="border">&nbsp;</div>
                                                <span class="text">{{ enemy.getHealth }} / {{ enemy.getHealth }}</span>
                                        </div>
                                        <div class="{{ enemy.getSpritePath }}"></div>
                                </div>
                        {% endfor %}
                </div>
        </div>

{% endblock %}

{% block javascripts %}
        {{ parent() }}

        <script src="{{ asset('js/game.js') }}" type="application/javascript"></script>
{% endblock %}